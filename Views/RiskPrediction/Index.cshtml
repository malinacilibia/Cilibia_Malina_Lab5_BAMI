@model Cilibia_Malina_Lab5.Models.RiskPredictionViewModel

@{
    ViewData["Title"] = "Risk Prediction";
}

<h2>Risk Prediction</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="InspectionType" class="control-label"></label>
                <input asp-for="InspectionType" class="form-control" placeholder="Routine - Unscheduled" />
                <span asp-validation-for="InspectionType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ViolationDescription" class="control-label"></label>
                <input asp-for="ViolationDescription" class="form-control" placeholder="Inadequately cleaned surfaces" />
                <span asp-validation-for="ViolationDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <input type="submit" value="Check" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-offset-2 col-md-4">
        @if (!string.IsNullOrEmpty(Model?.PredictedRisk))
        {
            <h1>Result</h1>
            <h2>Risk Category: @Model.PredictedRisk</h2>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}